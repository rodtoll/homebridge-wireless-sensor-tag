    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.v2.js"
        },
        {
            "name": "Run Homebridge",
            "runtimeExecutable": "/usr/local/bin/homebridge",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "args": [
                "-D",
                "-I",
                "-U",
                "./"
            ]
        }          
    ]
}